# EditorConfig for Python FastAPI projects
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python source files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88
# Following PEP 8 and Black formatter standards

# Python configuration files
[*.{cfg,ini}]
indent_style = space
indent_size = 4

# TOML files (pyproject.toml, etc.)
[*.toml]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Requirements files
[requirements*.txt]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2

# Docker Compose
[docker-compose*.yml]
indent_style = space
indent_size = 2

# Makefile
[{Makefile,makefile}]
indent_style = tab
indent_size = 4

# Documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# ReStructuredText
[*.rst]
indent_style = space
indent_size = 3
trim_trailing_whitespace = false

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Windows batch files
[*.{bat,cmd}]
indent_style = space
indent_size = 2