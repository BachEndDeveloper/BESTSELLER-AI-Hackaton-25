# EditorConfig for Java Spring projects
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java source files
[*.java]
indent_style = space
indent_size = 4
max_line_length = 120
continuation_indent_size = 8

# XML files (Maven POM, Spring configuration)
[*.xml]
indent_style = space
indent_size = 2

# Properties files
[*.properties]
indent_style = space
indent_size = 2

# YAML files (application.yml, etc.)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Build files
[{pom.xml,build.gradle,build.gradle.kts}]
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,conf}]
indent_style = space
indent_size = 2

# Documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Script files
[*.{sh,bat,cmd}]
indent_style = space
indent_size = 2